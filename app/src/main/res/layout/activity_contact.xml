<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.excitedcoder.polyfest.ContactActivity">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fillViewport="true"
        android:layout_marginBottom="54dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            >

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/card_nips"
                android:layout_below="@id/card_co-convener"
                android:elevation="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/nips_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_nips"
                        android:background="@color/indigo"
                        android:textColor="@color/white"
                        style="@style/TextAppearance.AppCompat.Headline"
                        android:textSize="20sp"
                        android:padding="8dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/nips_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nips_contact"
                        android:padding="4dp"
                        android:layout_margin="8dp"
                        style="@style/TextAppearance.AppCompat.Body2"
                        android:layout_below="@id/nips_title"
                        android:layout_toRightOf="@id/callN"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_call_black_24dp"
                        android:layout_below="@id/nips_title"
                        android:id="@+id/callN"
                        android:layout_marginLeft="14dp"
                        tools:ignore="VectorDrawableCompat" />


                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_below="@id/card_nips"
                android:id="@+id/card_glory"
                android:elevation="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/glory_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_glory_ppt"
                        android:background="@color/pink"
                        android:textColor="@color/white"
                        style="@style/TextAppearance.AppCompat.Headline"
                        android:textSize="20sp"
                        android:padding="8dp"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/ppt_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ppt"
                        android:padding="4dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp"
                        style="@style/TextAppearance.AppCompat.Body2"
                        android:layout_below="@id/glory_title"
                        android:textSize="16sp"
                        android:textColor="@color/pink"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_call_black_24dp"
                        android:layout_below="@id/ppt_title"
                        android:id="@+id/callN2"
                        android:layout_marginLeft="14dp"
                        tools:ignore="VectorDrawableCompat" />
                    <TextView
                        android:id="@+id/glory_contacts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/glory_contact_ppt"
                        android:padding="4dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        style="@style/TextAppearance.AppCompat.Body2"
                        android:layout_below="@id/ppt_title"
                        android:layout_toRightOf="@id/callN2"/>

                    <TextView
                        android:id="@+id/exibit_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/exibit"
                        android:padding="4dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        style="@style/TextAppearance.AppCompat.Body2"
                        android:layout_below="@id/glory_contacts"
                        android:textSize="16sp"
                        android:textColor="@color/pink"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_call_black_24dp"
                        android:layout_below="@id/exibit_title"
                        android:id="@+id/callN3"
                        android:layout_marginLeft="14dp"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/glory_exibit_contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/glory_contact_exibit"
                        android:padding="4dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        style="@style/TextAppearance.AppCompat.Body2"
                        android:layout_below="@id/exibit_title"
                        android:layout_toRightOf="@id/callN3"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_below="@id/card_glory"
                android:elevation="6dp"
                android:id="@+id/card_claps">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/clap_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_clap"
                        android:background="@color/deep_purple"
                        android:textColor="@color/white"
                        style="@style/TextAppearance.AppCompat.Headline"
                        android:textSize="20sp"
                        android:padding="8dp"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_call_black_24dp"
                        android:layout_below="@id/clap_title"
                        android:id="@+id/callN4"
                        android:layout_marginLeft="14dp"
                        tools:ignore="VectorDrawableCompat"
                        />
                    <TextView
                        android:id="@+id/claps_contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/clap_contact"
                        android:padding="4dp"
                        android:layout_margin="8dp"
                        style="@style/TextAppearance.AppCompat.Body2"
                        android:layout_below="@id/clap_title"
                        android:layout_toRightOf="@id/callN4"/>



                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"

                android:elevation="6dp"
                android:id="@+id/card_president">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/president_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_president"
                        android:background="@color/teal"
                        android:textColor="@color/white"
                        style="@style/TextAppearance.AppCompat.Headline"
                        android:textSize="20sp"
                        android:padding="8dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/president_principal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/president_title"
                        android:padding="4dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp"
                        style="@style/TextAppearance.AppCompat.Body2"
                        android:layout_below="@id/president_title"
                        android:textSize="16sp"
                        android:textColor="@color/teal"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_call_black_24dp"
                        android:layout_below="@id/president_principal"
                        android:id="@+id/callN5"
                        android:layout_marginLeft="14dp"
                        tools:ignore="VectorDrawableCompat"
                        />
                    <TextView
                        android:id="@+id/president_contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/president_mobile"
                        android:padding="4dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        style="@style/TextAppearance.AppCompat.Body2"
                        android:layout_below="@id/president_principal"
                        android:layout_toRightOf="@id/callN5"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_below="@id/card_president"
                android:elevation="6dp"
                android:id="@+id/card_convener">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/convener_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_convener"
                        android:background="@color/orange2"
                        android:textColor="@color/white"
                        style="@style/TextAppearance.AppCompat.Headline"
                        android:textSize="20sp"
                        android:padding="8dp"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_call_black_24dp"
                        android:layout_below="@id/convener_title"
                        android:id="@+id/callN6"
                        android:layout_marginLeft="14dp"
                        tools:ignore="VectorDrawableCompat"
                        />
                    <TextView
                        android:id="@+id/convener_contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/convener_mobile"
                        android:padding="4dp"
                        android:layout_margin="8dp"
                        style="@style/TextAppearance.AppCompat.Body2"
                        android:layout_below="@id/convener_title"
                        android:layout_toRightOf="@id/callN6"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_below="@id/card_convener"
                android:elevation="6dp"
                android:id="@+id/card_co-convener">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/co-convener_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_co_convener"
                        android:background="@color/orange2"
                        android:textColor="@color/white"
                        style="@style/TextAppearance.AppCompat.Headline"
                        android:textSize="20sp"
                        android:padding="8dp"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_call_black_24dp"
                        android:layout_below="@id/co-convener_title"
                        android:id="@+id/callN7"
                        android:layout_marginLeft="14dp"
                        tools:ignore="VectorDrawableCompat"
                        />
                    <TextView
                        android:id="@+id/co-convener_contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/co_convener_mobile"
                        android:padding="4dp"
                        android:layout_margin="8dp"
                        style="@style/TextAppearance.AppCompat.Body2"
                        android:layout_below="@id/co-convener_title"
                        android:layout_toRightOf="@id/callN7"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <!-- Transportation & accomidation -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_below="@id/card_claps"
                android:elevation="6dp"
                android:id="@+id/card_transport">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/transporter_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/trans_title"
                        android:background="@color/orange2"
                        android:textColor="@color/white"
                        style="@style/TextAppearance.AppCompat.Headline"
                        android:textSize="20sp"
                        android:padding="8dp"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_call_black_24dp"
                        android:layout_below="@id/transporter_title"
                        android:id="@+id/callN8"
                        android:layout_marginLeft="14dp"
                        tools:ignore="VectorDrawableCompat"
                        />
                    <TextView
                        android:id="@+id/transporter_contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/trans_mobile"
                        android:padding="4dp"
                        android:layout_margin="8dp"
                        style="@style/TextAppearance.AppCompat.Body2"
                        android:layout_below="@id/transporter_title"
                        android:layout_toRightOf="@id/callN8"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <!-- Organizing comitee -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_below="@id/card_transport"
                android:elevation="6dp"
                android:id="@+id/card_organizer">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/organizer_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/organizer_title"
                        android:background="@color/pink"
                        android:textColor="@color/white"
                        style="@style/TextAppearance.AppCompat.Headline"
                        android:textSize="20sp"
                        android:padding="8dp"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/organizer_team"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/organizeer_members"
                        android:padding="4dp"
                        android:layout_margin="10dp"
                        style="@style/TextAppearance.AppCompat.Body2"
                        android:layout_below="@id/organizer_title"
                        />

                </RelativeLayout>
            </android.support.v7.widget.CardView>



        </RelativeLayout>
    </ScrollView>




</android.support.constraint.ConstraintLayout>
